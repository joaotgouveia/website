---
import "@/styles/global.css";
import Navbar from "@/components/Navbar.astro";
import Footer from "@/components/Footer.astro";

interface Props {
    rssFeed?: string;
}

const { rssFeed = "/rss.xml" } = Astro.props;
---

<html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width" />
        <link rel="alternate" type="application/rss+xml" title="joaotgouveia" href={`${Astro.site}rss.xml`} />
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=JetBrains+Mono:ital,wght@0,100..800;1,100..800&display=swap" rel="stylesheet">
        <link
            href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined"
            rel="stylesheet"
        />
        <link rel="stylesheet" href="https://rsms.me/inter/inter.css" />
        <title>joaotgouveia</title>
    </head>
    <body class="relative min-h-screen bg-bg-primary text-fg-primary font-sans">
        <Navbar />
        <div class="pt-24 pb-14">
            <slot />
        </div>
        <Footer rssFeed=`${rssFeed}` />
    </body>
</html>
